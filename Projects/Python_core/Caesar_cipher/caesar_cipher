# Mini project - 7 Caesar program

import art
print(art.logo)
alphabet = ['a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i', 'j', 'k', 'l', 'm', 'n', 'o', 'p', 'q', 'r', 's', 't', 'u', 'v', 'w', 'x', 'y', 'z']

def caesar(direction_text, original_text, shift_input):
    if direction_text == "encode":
        cipher_text = ""
        for letter in original_text:
            if letter in alphabet:
                shifted_position = (alphabet.index(letter) + shift_input) % len(alphabet)
                new_letter = alphabet[shifted_position]
                cipher_text += new_letter
            else:
                cipher_text += letter
        print(f"Here is the encoded result: {cipher_text}")
    else:
        cipher_text = ""
        for letter in original_text:
            if letter in alphabet:
                shifted_position = (alphabet.index(letter) - shift_input) % len(alphabet)
                new_letter = alphabet[shifted_position]
                cipher_text += new_letter
            else:
                cipher_text += letter
        print(f"Here is the decoded result: {cipher_text}")

while True:
    direction = input("Type 'encode' to encrypt, type 'decode' to decrypt:\n").lower()
    text = input("Type your message:\n").lower()
    shift = int(input("Type the shift number:\n"))

    caesar(direction, text, shift)

    user_input = input("Do you want to rerun the cipher program. Yes or No? \n").lower()
    if user_input != "yes":
        print("Goodbye")
        break


